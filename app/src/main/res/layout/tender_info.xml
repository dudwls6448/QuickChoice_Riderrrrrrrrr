<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#DDDDDD">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="260dp"
        android:padding="10dp">

        <ImageView
            android:layout_width="match_parent"

            android:layout_height="match_parent"
            android:background="#242242" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/circlebutton"
        >

        <TextView
            android:id="@+id/tender_info_start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="출발지"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/tender_info_desti"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="도착지"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/tender_info_pickup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="픽업 시간 : "
            android:textSize="20dp" />

        <TextView
            android:id="@+id/tender_info_category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="카테고리"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/tender_info_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="금액 : "
            android:textSize="20dp" />


    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/tender_info_tdbutton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:text="입찰"
            android:textSize="20dp"
            android:background="@drawable/button"/>
    </RelativeLayout>

</LinearLayout>